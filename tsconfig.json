{
  "compilerOptions": {
    "target": "es2016",             // Language level of the emitted JavaScript.
    "module": "commonjs",           // Module system for Node.js.
    "rootDir": "./src",             // Root folder for your source files.
    "outDir": "./dist",             // Output folder for compiled files.
    "esModuleInterop": true,        // Allow seamless imports for CommonJS modules.
    "strict": true,                 // Enable all strict type-checking options.
    "skipLibCheck": true,           // Skip type checks for library files.
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in imports.
    "sourceMap": true
  },
  "include": ["src/**/*"],          // Include all TypeScript files in the src folder.
  "exclude": ["node_modules"]       // Exclude the node_modules folder.
}

